<h1>Basket</h1>
<div id="basket">
    {{#if courses.length}}
<div>
    <table>
        <thead>
            <tr>
                <th>Course name</th>
                <th>Count</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <th>{{title}}</th>
                <th>{{count}}</th>
                <th>
                    <button class="btn btm-small js-remove" data-id="{{id}}">Remove</button>
                </th>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <div>
        <strong>Price: </strong>
        <span class="price">{{price}}</span>
    </div>
</div>
{{else}}
<strong>Your basket is empty</strong>
{{/if}}
</div>
